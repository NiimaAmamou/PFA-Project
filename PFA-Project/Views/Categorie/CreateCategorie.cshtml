@model Categorie
@{
    ViewBag.Title = "Ajouter une Categorie";
}
<div class="page-header">
    <h3 class="page-title">Ajouter  des Categories</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Categorie/ListCategorie">Retourner vers la liste</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <form class="forms-sample" method="post">
                     <div asp-validation-summary="All"/>
                    <div class="form-group">
                        <label for="ref">Libelle</label>
                        <input type="text" class="form-control" asp-for="LibelleCategorie" placeholder="LibelleCategorie" />
                        <span asp-validation-for="LibelleCategorie"></span>
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-primary btn-rounded btn-fw"> Ajouter une Categorie</button>

                    </div>
                  
                </form>

            </div>
        </div>
    </div>
</div>