@model Categorie

<div class="page-header">
    <h3 class="page-title">Modification des Categories</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Categorie/CreateCategorie">Ajouter</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">


                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                   <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <input type="hidden" asp-for="IdCategorie" />
                    <div class="form-group">
                        <label for="ref">Libelle Categorie</label>
                                        <input type="text" class="form-control" asp-for="LibelleCategorie" placeholder="LibelleCategorie" />
                                        <span asp-validation-for="LibelleCategorie"></span>
                    </div>
                                    <div class="template-demo mt-2">
                                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Modifier Categorie
                                        </button>
                                    </div>
                                </form>

                    </div>
                </div>
            </div>
        </div>
