@{
}
@model Table
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Ajouter une Table<h4>

                        <form class="forms-sample" method="post">
                            <div asp-validation-summary="All" />
                            <div class="form-group">
                                <label for="numT">Numero Tbale</label>
                                <input type="text" class="form-control" asp-for="NumTable" placeholder="Numero de Table" />
                                <span asp-validation-for="NumTable"></span>
                            </div>
                            <div class="form-group">
                                <label for="cap">Capacite</label>
                                <input type="text" class="form-control" asp-for="Capacite" placeholder="Capacite" />
                                <span asp-validation-for="Capacite"></span>
                            </div>
                            <div class="form-group">
                                <label for="etaT">Etat Table</label>
                                <select class="form-control" asp-for="EtatTable">
                                    <option>Disponible</option>
                                    <option>Reservée</option>
                                    </select>
                                <span asp-validation-for="EtatTable"></span>
                            </div>
                            <div class="form-group">
                                <label for="desc">Description</label>
                                <textarea type="text" class="form-control" asp-for="Description" placeholder="Description" ></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="template-demo mt-2">
                                <button type="submit" class="btn btn-outline-primary btn-icon-text">
                                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Ajouter
                                </button>
                            </div>
                        </form>

            </div>
        </div>
    </div>
</div>