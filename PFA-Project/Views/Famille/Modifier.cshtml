@model Famille

<div class="page-header">
    <h3 class="page-title">Modification des Familles</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Famille/List">Retourner vers la liste</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="ref">Libellé</label>
                        <input type="text" class="form-control" asp-for="Libelle" placeholder="Libellé" />
                        <span asp-validation-for="Libelle"></span>
                    </div>
                    <div class="form-group">
                        <label for="couleur">Couleur</label>
                        <input type="color" class="form-control" asp-for="Couleur" placeholder="Couleur" />
                        <span asp-validation-for="Couleur"></span>
                    </div>
                  
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Modifier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

