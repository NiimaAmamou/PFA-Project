@model Produit
@{
    ViewBag.Title = "Ajouter Produit";
}
<div class="page-header">
    <h3 class="page-title">Ajouter  des Produits</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Produit/ListProduit">Retourner vers la liste des produits</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Ajouter un Produit
                </h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data" >
                    <div asp-validation-summary="All" />
                    <div class="form-group">
                        <label for="ref">Libélle</label>
                        <input type="text" class="form-control" asp-for="LibelleProduit" placeholder="Libelle" id="libelle"/>
                        <span asp-validation-for="LibelleProduit"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Prix Unitaire</label>
                        <input type="text" class="form-control" asp-for="Prix" placeholder="Prix" id="pu" />
                        <span asp-validation-for="Prix"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Image Produit</label>
                        <input type="file" class="form-control" asp-for="image1" id="img">
                        <span asp-validation-for="image1"></span>
                    </div>
                    <div class="form-group">
                        <label>Article </label>
                        <select class="form-control" asp-items="@ViewBag.Articles" id="article"></select>
                    </div>
                   <div class="form-group">
                        <label>Famille </label>
                        <select asp-for="IdFamille" class="form-control" asp-items="@ViewBag.Familles" id="famille"></select>
                    </div>
                    <div class="form-group">
                        <label for="ref">Quantite</label>
                        <input type="text" class="form-control"  placeholder="Quantite" id="Quantite" />
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-primary btn-rounded btn-fw" onClick="affichageTab()"> + </button>

                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-primary btn-rounded btn-fw"> Ajouter Produit </button>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function affichageTab()
    {
        let libelle = document.getElementById('libelle').value;
        let pu = document.getElementById('pu').value;
       
        let article = document.getElementById('article').value;
        let famille = document.getElementById('famille').value;
        let qte = document.getElementById('qte').value;
        <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Libelle</th>
                                <th>Prix Unitaire</th>
                                
                                <th>Article</th>
                                <th>Famille</th>
                                <th>Quantite</th>
                            </tr>
                           
                        </thead>

         </table>
    }
</script>