@model Produit
@{
    ViewBag.Title = "Ajouter Produit";
}
<div class="page-header">
    <h3 class="page-title">Ajouter  des Produits</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Produit/ListProduit">Retourner vers la liste des produits</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Ajouter un Produit
                </h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" />
                    <input type="hidden" asp-for="IdProduit" />
                    <div class="form-group">
                        <label for="ref">Libélle</label>
                        <input type="text" class="form-control" asp-for="LibelleProduit" placeholder="Libelle" />
                        <span asp-validation-for="LibelleProduit"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Prix Unitaire</label>
                        <input type="text" class="form-control" asp-for="Prix" placeholder="Prix" />
                        <span asp-validation-for="Prix"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Image Produit</label>
                        <img src="/ImgProduit/@Model.Image" height="200px" width="200px" />
                        <input class="form-control" asp-for="image1" value="Image" />
                        <span asp-validation-for="image1"></span>
                    </div>

                    <div class="form-group">
                        <label for="ref">Famille </label>
                        <select asp-for="IdFamille" class="form-control" asp-items="@ViewBag.Familles"></select>
                    </div>
                    <div class="form-group">
                        <label for="ref">Articles </label>
                        <select  class="form-control" asp-items="@ViewBag.Articles"></select>
                    </div>
                    <div class="form-group">
                        <label for="ref">Quantite</label>
                        <input type="text" class="form-control" placeholder="Quantite" id="Quantite" />
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-primary btn-rounded btn-fw"> Modifier Produit </button>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
