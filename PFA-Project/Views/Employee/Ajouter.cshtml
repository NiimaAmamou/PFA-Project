@model Employee
<div class="page-header">
    <h3 class="page-title">Ajouter  des employes</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Employee/List">Retourner vers la liste des employes</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
               
                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <div class="form-group">
                        <label for="ref">Role</label>
                        <input class="form-control" asp-for="Role" value="@ViewBag.role">
                    </div>
                    <div class="form-group">
                        <label for="ref">Nom</label>
                        <input  class="form-control" asp-for="Nom">
                    </div>
                    <div class="form-group">
                        <label for="ref">Prenom</label>
                        <input class="form-control" asp-for="Prenom">
                    </div>
                    <div class="form-group">
                        <label for="ref">Date de naissance</label>
                        <input class="form-control" asp-for="Date_naissance">
                    </div>
                    <div class="form-group">
                        <label for="ref">Email</label>
                        <input class="form-control" asp-for="email">
                    </div>
                    <div class="form-group">
                        <label for="ref">Salaire</label>
                        <input class="form-control" asp-for="Salaire">
                    </div>
                    <div class="form-group">
                        <label for="ref">Heure de Travail</label>
                        <input class="form-control" asp-for="Heure_Travail">
                    </div>
                    <div class="form-group">
                        <label for="ref">Heure Sup</label>
                        <input class="form-control" asp-for="Heure_Sup">
                    </div>
                    <div class="form-group">
                        <label for="ref">Login</label>
                        <input class="form-control" asp-for="Login">
                    </div>
                    <div class="form-group">
                        <label for="ref">Password</label>
                        <input class="form-control" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <label for="ref">Comirmer le password</label>
                        <input class="form-control" asp-for="ConfirmationPass">
                    </div>
                    <div style="@(ViewBag.role==null || ViewBag.role!="Serveur" ? "display:none;" : " ")" class="form-group">
                        <label for="ref">Recette du serveur</label>
                        <input class="form-control" asp-for="RecetteServ">
                    </div>
                    <div style="@(ViewBag.role==null || ViewBag.role!="Cuisinier" ? "display:none;" : " ")" class="form-group">
                        <label for="ref">Nombre d'experience'</label>
                        <input class="form-control" asp-for="NbrExperience">
                    </div>
                    <div style="@(ViewBag.role==null ? "display:none;" : " ")" class="form-group">
                        <label for="ref">Description</label>
                        <input class="form-control" asp-for="Description">
                    </div>
                    <div style="@(ViewBag.role==null ? "display:none;" : " ")" class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Ajouter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>