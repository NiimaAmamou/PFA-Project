@model Employee
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Ajouter un Employee
                </h4>

                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <div class="form-group">
                        <label for="ref">Role</label>
                        <select class="form-control" id="role" asp-for="Role" asp-items="@ViewBag.EmpRoles"></select>
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Valider
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>