@model List<Fournisseur>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a class="btn btn-primary btn-rounded btn-icon" asp-action="Ajouter" asp-controller="Fournisseur">
                            <i class="mdi mdi-comment-account"></i>
                        </a>
                    </p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id Fournisseur</th>
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Nº Telephone</th>
                                <th>Email</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                            @foreach (Fournisseur fournisseur in Model)
                            {
                                <tr>
                                    <td>@fournisseur.Id</td>
                                    <td>@fournisseur.Nom</td>
                                    <td>@fournisseur.Adresse</td>
                                    <td>@fournisseur.N_Tel</td>
                                    <td>@fournisseur.Email</td>
                                    <td>@fournisseur.Statut</td>
                                    <td>
                                        <center>
                                            <a href="/Fournisseur/Modifier/@fournisseur.Id" class="text-success">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a> |
                                            <a href="/Fournisseur/Supprimer/@fournisseur.Id" onclick="return confirm('Voulez-Vous Supprimer?');" class="text-danger"><i class="mdi mdi-delete"></i></a>
                                        </center>
                                    </td>
                                    </tr>
                            }
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>