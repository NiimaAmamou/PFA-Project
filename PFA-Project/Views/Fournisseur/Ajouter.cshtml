@model Fournisseur
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Ajouter un fournisseur
                </h4>

                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <div class="form-group">
                        <label for="ref">Nom</label>
                        <input type="text" class="form-control" asp-for="Nom" placeholder="Libelle" />
                        <span asp-validation-for="Nom"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Adresse</label>
                        <input class="form-control" asp-for="Adresse">
                        <span asp-validation-for="Adresse"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Nº Telephone</label>
                        <input class="form-control" asp-for="N_Tel">
                        <span asp-validation-for="N_Tel"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Email</label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Statut</label>
                        <input type="checkbox" class="form-control" asp-for="Statut">Disponible
                        <span asp-validation-for="Statut"></span>
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Ajouter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>