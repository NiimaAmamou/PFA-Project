@model Fournisseur

<div class="page-header">
    <h3 class="page-title">Modification des fournisseurs</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Fournisseur/List">Retourner vers la liste</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="ref">Libellé</label>
                        <input type="text" class="form-control" asp-for="Nom" placeholder="Nom" />
                        <span asp-validation-for="Nom"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Adresse</label>
                        <input type="text" class="form-control" asp-for="Adresse" placeholder="Adresse" />
                        <span asp-validation-for="Adresse"></span>
                    </div>

                    <div class="form-group">
                        <label for="ref">Nº Telephone</label>
                        <input type="text" class="form-control" asp-for="N_Tel" placeholder="Nº Telaphone" />
                        <span asp-validation-for="N_Tel"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Email</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label for="ref">Statut</label>
                        <input class="form-control" asp-for="Statut"/>
                        <span asp-validation-for="Statut"></span>
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Modifier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

