@model List<Fourniture>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a class="btn btn-primary btn-rounded btn-icon" asp-action="Ajouter" asp-controller="Fournitures">
                            <i class="mdi mdi-comment-plus-outline"></i>
                        </a>
                    </p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fournisseur</th>
                                <th>Article</th>
                                <th>Qte</th>
                                <th>Actions</th>
                            </tr>
                            @foreach (Fourniture fourniture in Model)
                            {
                                <tr>
                                    <td>@fourniture.Id</td>
                                    <td>@(fourniture.Fournisseur != null ? fourniture.Fournisseur.Nom : "N/A")</td>
                                    <td>@(fourniture.Article != null ? fourniture.Article.LibelleArticle : "N/A")</td>
                                    <td>@fourniture.Qte</td>
                                    <td>
                                        <center>
                                            <a href="/Fournitures/Modifier/@fourniture.Id" class="text-success">
                                                <i class="mdi mdi-table-edit"></i>
                                            </a> |
                                            <a href="/Fournitures/Supprimer/@fourniture.Id" onclick="return confirm('Voulez-Vous Supprimer?');" class="text-danger"><i class="mdi mdi-delete"></i></a>
                                        </center>
                                    </td>
                                </tr>
                               
                              
                            }
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>