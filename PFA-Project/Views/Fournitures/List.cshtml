@model List<Fourniture>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a class="btn btn-primary btn-rounded btn-icon" asp-action="Ajouter" asp-controller="Fournitures">
                            <i class="mdi mdi-cart-plus"></i>
                        </a>
                    </p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fournisseur</th>
                                <th>Article</th>
                                <th>Qte</th>
                            </tr>
                            @foreach (Fourniture fourniture in Model)
                            {
                                <tr>
                                    <td>@fourniture.Id</td>
                                    <td>@(fourniture.Fournisseur != null ? fourniture.Fournisseur.Nom : "N/A")</td>
                                    <td>@(fourniture.Article != null ? fourniture.Article.LibelleArticle : "N/A")</td>
                                    <td>@fourniture.Qte</td>
                                    <td><a class="btn btn-danger" asp-controller="Fournitures" asp-action="Supprimer" asp-route-id="@fourniture.Id">Supprimer</a></td>
                                    <td><a class="btn btn-outline-secondary" asp-controller="Fournitures" asp-action="Modifier" asp-route-id="@fourniture.Id">Modifier</a></td>
                                </tr>
                            }
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>