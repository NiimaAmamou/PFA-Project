@model Fourniture

<div class="page-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Fourniture/List">Retourner vers la liste</a></li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <form class="forms-sample" method="post">
                    <div asp-validation-summary="All" />
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="ref">Article</label>
                        <select asp-for="IdArticle" asp-items="@ViewBag.ListArticle" id="Article" class="form-control"></select>
                        <!--span asp-validation-for="Article"></!--span-->
                    </div>
                    <div class="form-group">
                        <label for="ref">Fournisseur</label>
                        <select asp-for="IdFournisseur" asp-items="@ViewBag.ListFournisseur" id="Fournisseur" class="form-control"></select>
                        <!--span asp-validation-for="Fournisseur"></span-->
                    </div>
                    <div class="form-group">
                        <label for="ref">Qte</label>
                        <input class="form-control" asp-for="Qte">
                        <span asp-validation-for="Qte"></span>
                    </div>
                    <div class="template-demo mt-2">
                        <button type="submit" class="btn btn-outline-primary btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-prepend"></i> Modifier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

