
@model List<Article>
<div class="page-header">
    <h3 class="page-title">Listes des Articles</h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Article/Create">Ajouter</a></li>
           
        </ol>
    </nav>
</div>
<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                    <p>
                        <a class="btn btn-primary btn-rounded btn-icon" asp-action="Create" asp-controller="Article">
                            <i class="mdi mdi-cart-plus"></i>
                    </a>
                    </p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id Article</th>
                            <th>Référence Article</th>
                            <th>Libellé Article</th>
                           
                            <th>Quantité</th>
                                <th>Unité</th>
                                <th></th>
                        </tr>
                        @foreach (Article art in Model)
                        {
                            <tr class="@(art.QteStock<=5?"bg-warning":"")">
                                <td>@art.IdArticle</td>
                                <td>@art.RefArticle</td>
                                <td>@art.LibelleArticle</td>
                               
                                <td>@art.QteStock</td>
                                    <td>@art.Unite</td>
                                    <td>
                                    <center>
                                            <a href="/Article/Edit/@art.IdArticle" class="text-success">
                                                <i class="mdi mdi-table-edit
"></i>
                                            </a> |
                                            <a href="/Article/Delete/@art.IdArticle" onclick="return confirm('Voulez-Vous Supprimer?');" class="text-danger"><i class="mdi mdi-delete"></i></a>
                                    </center>
                                    </td>
                            </tr>
                        }
                    </thead>
                      
                </table>

                  
</div>
</div>
</div>
</div>
</div>
